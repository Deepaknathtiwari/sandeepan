{
    "extends": [
        "tslint-react-recommended"
    ],
    "rules": {
        "ordered-imports": [
            false
        ],
        "eofline": false,
        "quotemark": [
            true,
            "single",
            "jsx-single",
            "avoid-escape"
        ],
        "semicolon": [
            false,
        ],
        "member-access": [
            false
        ],
        "member-ordering": [
            false
        ],
        "trailing-comma": [
            true,
            {
                "singleline": "never",
                "multiline": "always"
            }
        ],
        "no-empty": false,
        "no-submodule-imports": false,
        "no-implicit-dependencies": false,
        "no-constant-condition": false,
        "triple-equals": [
            true,
            "allow-undefined-check"
        ],
        "ter-indent": [
            true,
            2,
            {
                "SwitchCase": 1
            }
        ],
        "no-duplicate-imports": false,
        "jsx-alignment": true,
        "jsx-no-bind": true,
        "jsx-no-lambda": true,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ],
        "no-empty-interface": true,
        "no-duplicate-variable": true,
        "align": [true, "parameters", "statements"]
    }
}